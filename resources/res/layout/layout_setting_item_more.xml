<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:orientation="vertical" android:paddingTop="16dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginEnd="80dp">
        <TextView android:id="@+id/title" android:layout_centerVertical="false" style="@style/OptionsItemText"/>
        <View android:id="@+id/red_point" android:background="@drawable/red_point" android:visibility="gone" android:layout_width="4dp" android:layout_height="4dp" android:layout_alignTop="@+id/title" android:layout_marginStart="4dp" android:layout_toEndOf="@+id/title"/>
        <TextView android:id="@+id/description" android:visibility="gone" android:layout_marginTop="12dp" android:layout_below="@+id/title" style="@style/OptionsItemDesTextStyle"/>
    </RelativeLayout>
    <ImageView android:id="@+id/image_new" android:visibility="gone" android:layout_marginEnd="16dp" android:layout_alignParentEnd="true" style="@style/OptionsItemIconMoreNew"/>
    <ImageView android:id="@+id/image_new_tag" android:visibility="gone" android:layout_marginEnd="16dp" android:layout_toStartOf="@+id/image" android:layout_alignParentEnd="true" style="@style/OptionsItemIconMoreNewTag"/>
</merge>
