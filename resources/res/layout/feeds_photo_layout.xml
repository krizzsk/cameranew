<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@android:color/white" android:paddingBottom="@dimen/feeds_lower_part_padding" android:clipChildren="false" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:clipChildren="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="12dp" android:layout_marginRight="16dp" android:layout_marginBottom="12dp">
        <us.pinguo.widet.PortraitImageView android:id="@+id/feeds_photo_avatar" android:layout_width="@dimen/feeds_avatar_size" android:layout_height="@dimen/feeds_avatar_size" android:src="@drawable/default_avatar" android:layout_centerVertical="true" app:civ_border_width="0dp"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/avatar_name_margin" android:layout_toLeftOf="@+id/feeds_photo_right" android:layout_toRightOf="@+id/feeds_photo_avatar" android:layout_centerVertical="true">
            <TextView android:id="@+id/feeds_photo_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textIsSelectable="true" style="@style/FeedsName"/>
            <TextView android:id="@+id/feeds_photo_loc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:text="Barcelona,Spain" style="@style/FeedsDesc"/>
        </LinearLayout>
        <FrameLayout android:id="@+id/feeds_photo_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/feeds_margin" android:layout_alignParentRight="true" android:layout_centerVertical="true">
            <us.pinguo.user.ui.view.AttentionButton android:layout_gravity="center" android:id="@+id/feeds_relation" style="@style/AttentionMDButton"/>
            <Button android:layout_gravity="center" android:id="@+id/feeds_photo_join_challenge" android:visibility="gone" android:text="@string/inspire_participate_short" style="@style/AttentionMDButton"/>
            <TextView android:textSize="11dp" android:textColor="@color/text_lower" android:ellipsize="end" android:layout_gravity="end|center_vertical" android:id="@+id/feeds_photo_time" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2 hours" android:singleLine="true"/>
        </FrameLayout>
    </RelativeLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/feeds_photo_game_enter_layout" android:background="@android:color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="0dp">
        <include layout="@layout/photo_game_entrance_layout"/>
    </LinearLayout>
    <us.pinguo.inspire.widget.SystemErrorTextView android:textSize="16dp" android:textColor="@color/text_deeper" android:id="@+id/feeds_photo_content" android:paddingLeft="@dimen/feeds_margin" android:paddingTop="0dp" android:paddingRight="@dimen/feeds_margin" android:paddingBottom="0dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="content" android:lineSpacingMultiplier="1.2" android:textIsSelectable="true"/>
    <include android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/feeds_margin" android:layout_marginRight="@dimen/feeds_margin" layout="@layout/comment_header_translate_layout"/>
    <RelativeLayout android:id="@+id/feeds_photo_video_container" android:paddingTop="@dimen/feeds_upper_part_padding" android:layout_width="match_parent" android:layout_height="wrap_content">
        <us.pinguo.inspire.module.feeds.view.FeedsPhotoCommentView android:id="@+id/feeds_photo_group" android:layout_width="match_parent" android:layout_height="200dp"/>
        <us.pinguo.inspire.widget.videocell.InspireVideoView android:layout_gravity="center" android:id="@+id/feeds_photo_video" android:visibility="gone" android:layout_width="match_parent" android:layout_height="200dp"/>
        <ImageView android:id="@+id/feeds_photo_like_anim" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/like_anim" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/feeds_btn_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/feeds_lower_part_padding">
        <ImageView android:id="@+id/feeds_photo_collect_img" android:background="?android:attr/selectableItemBackgroundBorderless" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:src="@drawable/feeds_photo_unlike"/>
        <TextView android:textSize="14dp" android:textColor="@color/text_primary" android:id="@+id/feeds_photo_collect_txt" android:background="?android:attr/selectableItemBackgroundBorderless" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="0dp" android:text="@string/feeds_photo_like_no_num"/>
        <ImageView android:id="@+id/feeds_photo_comment_img" android:background="?android:attr/selectableItemBackgroundBorderless" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="28dp" android:src="@drawable/feeds_photo_comment_selector"/>
        <TextView android:textSize="14dp" android:textColor="@color/text_primary" android:id="@+id/feeds_photo_comment_txt" android:background="?android:attr/selectableItemBackgroundBorderless" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="0dp" android:text="@string/inspire_comment"/>
        <ImageView android:id="@+id/feeds_photo_flower_img" android:background="?android:attr/selectableItemBackgroundBorderless" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="28dp" android:src="@drawable/icon_profile_rose_line"/>
        <TextView android:textSize="14dp" android:textColor="@color/text_primary" android:id="@+id/feeds_photo_flower_txt" android:background="?android:attr/selectableItemBackgroundBorderless" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="0dp" android:text="@string/flower"/>
        <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>
        <ImageView android:id="@+id/feeds_photo_share" android:background="?android:attr/selectableItemBackgroundBorderless" android:paddingLeft="4dp" android:paddingRight="4dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:src="@drawable/feeds_share_selector"/>
    </LinearLayout>
</LinearLayout>
