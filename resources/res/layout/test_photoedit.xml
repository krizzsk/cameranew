<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="6">
        <TextView android:id="@+id/tv_test_edit" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </ScrollView>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="20dp" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="磨皮:"/>
        <EditText android:textSize="20dp" android:layout_gravity="center_vertical" android:id="@+id/et_skin_param" android:layout_width="60dp" android:layout_height="wrap_content" android:text="30" android:inputType="number"/>
        <TextView android:textSize="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Pro:"/>
        <CheckBox android:layout_gravity="center_vertical" android:id="@+id/check_box" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""/>
        <Button android:gravity="center" android:id="@+id/btn_test_edit" android:background="@drawable/test_button_selector" android:text="制图测试" style="@style/TestOptionsItemText"/>
    </LinearLayout>
</LinearLayout>
