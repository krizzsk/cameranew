<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:paddingTop="16dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="80dp">
        <TextView android:id="@+id/title" android:layout_centerVertical="true" style="@style/OptionsItemText"/>
        <TextView android:id="@+id/description" android:visibility="gone" android:layout_marginTop="4dp" style="@style/OptionsItemDesTextStyle"/>
        <TextView android:textSize="10dp" android:textColor="#ff999999" android:id="@+id/profile" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/option_item_recommendation"/>
    </LinearLayout>
    <TextView android:id="@+id/summary" android:layout_toLeftOf="@+id/checkbox" android:layout_centerVertical="true" style="@style/OptionsItemSummaryTextStyle"/>
    <androidx.appcompat.widget.SwitchCompat android:id="@+id/switch_button" style="@style/SwitchStyle"/>
</merge>
