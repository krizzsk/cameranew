<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#f4f4f4" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/base_title_layout"/>
    <LinearLayout android:orientation="vertical" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/debug_qa" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="55dp">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:src="@drawable/profile_suggestion" android:layout_centerVertical="true"/>
            <TextView android:textSize="13dp" android:textColor="@color/text_primary" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="IS QA" android:layout_weight="1" android:layout_centerVertical="true"/>
            <Switch android:id="@+id/debug_qa_switch" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:textOn="true" android:textOff="false"/>
        </LinearLayout>
        <View android:background="@color/list_divider_color" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="15dp"/>
    </LinearLayout>
</LinearLayout>
