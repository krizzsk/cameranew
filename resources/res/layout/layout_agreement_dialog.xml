<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18dp" android:textStyle="bold" android:textColor="@color/black" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/agreement_dialog_title"/>
        <TextView android:textSize="14dp" android:textColor="@color/light_main_title_text" android:id="@+id/text_content" android:padding="6dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginTop="12dp">
            <TextView android:textSize="14dp" android:textColor="@color/light_colorAccent" android:gravity="center_vertical" android:id="@+id/btn_yes" android:background="@drawable/ripple_rect_background_selector" android:paddingLeft="18dp" android:paddingRight="18dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/agreement_dialog_yes" android:layout_alignParentRight="true"/>
            <TextView android:textSize="14dp" android:textColor="@color/primary_gray_color" android:gravity="center_vertical" android:id="@+id/btn_no" android:background="@drawable/ripple_rect_background_selector" android:paddingLeft="18dp" android:paddingRight="18dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/agreement_dialog_no" android:layout_toLeftOf="@+id/btn_yes"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
