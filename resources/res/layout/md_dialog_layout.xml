<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:wheel="http://schemas.android.com/apk/res-auto" android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:layout_width="80dp" android:layout_height="80dp" android:layout_marginLeft="16dp">
        <com.pnikosis.materialishprogress.ProgressWheel android:id="@+id/progress_wheel" android:layout_width="80dp" android:layout_height="80dp" wheel:matProg_barColor="@color/light_colorAccent" wheel:matProg_progressIndeterminate="true"/>
        <TextView android:textSize="12dp" android:textColor="@color/text_primary" android:layout_gravity="center" android:id="@+id/progress_percentage" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </FrameLayout>
    <TextView android:textSize="16dp" android:textColor="@android:color/black" android:gravity="center" android:id="@+id/progress_message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="24dp"/>
</LinearLayout>
