<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="2dp" app:cardElevation="2dp">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <us.pinguo.ui.uilview.PhotoImageView android:id="@+id/piv_cover_nice_user_cell" android:background="@color/inspire_loading_color" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <View android:background="@color/cover_color" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignTop="@+id/piv_cover_nice_user_cell" android:layout_alignBottom="@+id/piv_cover_nice_user_cell"/>
            <us.pinguo.user.ui.view.AttentionButton android:id="@+id/ab_nice_user_cell" android:layout_margin="10dp" android:layout_alignParentTop="true" android:layout_alignParentRight="true" style="@style/AttentionMDButton"/>
