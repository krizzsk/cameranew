<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:background="@color/white" android:paddingBottom="48dp" android:layout_width="260dp" android:layout_height="wrap_content">
        <TextView android:textSize="20dp" android:textStyle="bold" android:textColor="@color/black" android:layout_gravity="start|top" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="48dp" android:text="@string/to_continue" android:layout_marginStart="20dp"/>
        <TextView android:textSize="12dp" android:textColor="#999999" android:gravity="start" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="@string/permission_please" android:maxLines="2" android:singleLine="false" android:layout_marginStart="20dp" android:layout_marginEnd="18dp"/>
        <Space android:layout_width="match_parent" android:layout_height="20dp"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/layout_camera" android:background="@drawable/click_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="60dp">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <CheckBox android:layout_gravity="start|center_vertical" android:id="@+id/check_camera" android:clickable="false" android:layout_width="16dp" android:layout_height="16dp" android:checked="true" android:button="@drawable/checkbox_style" android:layout_marginStart="20dp"/>
                <TextView android:textSize="16dp" android:textColor="@color/black" android:gravity="start" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/permission_camera" android:maxLines="2" android:singleLine="false" android:layout_marginStart="8dp" android:layout_marginEnd="18dp"/>
            </LinearLayout>
            <TextView android:textSize="12dp" android:textColor="#999999" android:gravity="start" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/permission_launch_dialog_camera_desc" android:maxLines="2" android:singleLine="false" android:layout_marginStart="44dp" android:layout_marginEnd="18dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/layout_sdcard" android:background="@drawable/click_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="60dp">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <CheckBox android:layout_gravity="start|center_vertical" android:id="@+id/check_sdcard" android:clickable="false" android:layout_width="16dp" android:layout_height="16dp" android:checked="true" android:button="@drawable/checkbox_style" android:layout_marginStart="20dp"/>
                <TextView android:textSize="16dp" android:textColor="@color/black" android:gravity="start" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/permission_sdcard" android:maxLines="2" android:singleLine="false" android:layout_marginStart="8dp" android:layout_marginEnd="18dp"/>
            </LinearLayout>
            <TextView android:textSize="12dp" android:textColor="#999999" android:gravity="start" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/permission_launch_dialog_storage_desc" android:maxLines="2" android:singleLine="false" android:layout_marginStart="44dp" android:layout_marginEnd="18dp"/>
        </LinearLayout>
        <us.pinguo.ui.widget.AutofitTextView android:enabled="true" android:textSize="14dp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/permission_next" android:background="@drawable/btn_permission_next_ripple" android:layout_width="200dp" android:layout_height="40dp" android:layout_marginTop="32dp" android:text="@string/permission_allow_all" android:maxLines="1"/>
        <us.pinguo.ui.widget.AutofitTextView android:enabled="true" android:textSize="14dp" android:textColor="#999999" android:layout_gravity="center_horizontal" android:id="@+id/permission_deny" android:background="@drawable/ripple_common_bg" android:padding="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/permission_deny"/>
    </LinearLayout>
</FrameLayout>
