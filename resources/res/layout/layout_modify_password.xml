        <Button android:textColor="@android:color/white" android:gravity="center" android:id="@+id/id_modify_password_btn" android:background="@drawable/pg_register_btn_background" android:padding="0dp" android:layout_width="match_parent" android:layout_height="@dimen/pg_login_button_height" android:layout_marginTop="@dimen/pg_email_find_password_button_top" android:text="@string/pic_save_path_custom_ok"/>
    </LinearLayout>
</LinearLayout>
