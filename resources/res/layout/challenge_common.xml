<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="2dp" app:cardElevation="0dp">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <FrameLayout android:id="@+id/fl_photo_content_challenge_cell" android:background="@color/inspire_loading_color" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <us.pinguo.inspire.widget.PhotoGridView android:id="@+id/pgv_discovery_challenge_cell" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                    <com.zhy.android.percent.support.PercentFrameLayout android:id="@+id/pfl_challenge_cell" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_challenge_cell" android:layout_width="match_parent" android:layout_height="0dp" android:dividerHeight="0dp" app:layout_heightPercent="67%w"/>
                    </com.zhy.android.percent.support.PercentFrameLayout>
                    <us.pinguo.ui.uilview.PhotoImageView android:id="@+id/piv_cover_discovery_challenge_cell" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                </FrameLayout>
                <View android:background="@drawable/bg_challenge_cover" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignBottom="@+id/fl_photo_content_challenge_cell" android:layout_alignParentTop="@+id/fl_photo_content_challenge_cell"/>
                <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true">
                    <TextView android:textSize="19dp" android:textColor="@color/white" android:ellipsize="end" android:gravity="center" android:id="@+id/tv_title_discovery_challenge_cell" android:paddingLeft="12dp" android:paddingRight="12dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2"/>
                    <TextView android:textSize="14dp" android:textColor="#99ffffff" android:ellipsize="end" android:gravity="center" android:id="@+id/tv_desc_discovery_challenge_cell" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:layout_marginBottom="12dp" android:singleLine="true" android:layout_centerHorizontal="true"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ll_bottom_bg_challenge_cell" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <us.pinguo.ui.uilview.CircleImageView android:id="@+id/civ_avatar_0_challenge_cell" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginRight="4dp" android:src="@drawable/default_avatar" app:civ_border_width="0dp"/>
                <us.pinguo.ui.uilview.CircleImageView android:id="@+id/civ_avatar_1_challenge_cell" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginRight="4dp" android:src="@drawable/default_avatar" app:civ_border_width="0dp"/>
                <us.pinguo.ui.uilview.CircleImageView android:id="@+id/civ_avatar_2_challenge_cell" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginRight="4dp" android:src="@drawable/default_avatar" app:civ_border_width="0dp"/>
                <TextView android:textSize="14dp" android:textColor="@android:color/white" android:id="@+id/tv_challengers_discovery_challenge_cell" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/arrow_right_challenge"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <View android:id="@+id/v_divider_challenge_cell" android:layout_width="match_parent" android:layout_height="8dp"/>
</merge>
