<?xml version="1.0" encoding="utf-8"?>
<com.pinguo.camera360.ui.TitleBarLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/titleBarLayout" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:orientation="vertical" android:background="@color/light_common_bg" android:layout_width="match_parent" android:layout_height="match_parent">
        <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <FrameLayout android:id="@+id/personLayout" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/my_vip_layout" android:background="@color/primary_white_color" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                    <us.pinguo.foundation.ui.view.CommonItemView android:id="@+id/myVip" android:layout_width="match_parent" android:layout_height="wrap_content" app:leftIcon="@drawable/icon_mine_vip" app:leftIconHeight="32dp" app:leftIconMargin="12dp" app:leftIconWidth="32dp" app:leftTextMargin="6dp" app:text="@string/my_member"/>
                </LinearLayout>
                <us.pinguo.foundation.ui.view.CommonItemView android:id="@+id/cloudAlbum" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" app:leftIcon="@drawable/icon_mine_album_cloud" app:leftIconHeight="24dp" app:leftIconWidth="24dp" app:text="@string/my_center_cloud_entry"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/cameraSettingLinearLayout" android:background="@color/primary_white_color" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <us.pinguo.foundation.ui.view.CommonItemView android:id="@+id/setting" android:layout_width="match_parent" android:layout_height="wrap_content" app:leftIcon="@drawable/icon_mine_setting" app:leftIconHeight="24dp" app:leftIconWidth="24dp" app:text="@string/setting"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:background="@color/primary_white_color" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp">
                    <us.pinguo.foundation.ui.view.CommonItemView android:id="@+id/suggestions" android:layout_width="match_parent" android:layout_height="wrap_content" app:leftIcon="@drawable/icon_mine_feedback" app:leftIconHeight="24dp" app:leftIconWidth="24dp" app:text="@string/profile_suggestion"/>
                    <us.pinguo.foundation.ui.view.CommonItemView android:id="@+id/about" android:layout_width="match_parent" android:layout_height="wrap_content" app:leftIcon="@drawable/icon_mine_about" app:leftIconHeight="24dp" app:leftIconWidth="24dp" app:text="@string/option_item_about"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <FrameLayout android:id="@+id/portal_publish_container_parent" android:background="#f9fafafa" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <FrameLayout android:id="@+id/portal_publish_container" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </FrameLayout>
    </FrameLayout>
</com.pinguo.camera360.ui.TitleBarLayout>
