<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:paddingLeft="20dp" android:paddingRight="10dp" android:paddingBottom="30dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="30dp" android:textColor="@android:color/white" android:ellipsize="end" android:id="@+id/album_set_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="35dp" android:singleLine="true" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp">
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="14dp" android:textColor="@android:color/white" android:layout_gravity="left" android:id="@+id/album_create_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@drawable/time" android:drawablePadding="10dp"/>
            <TextView android:textSize="14dp" android:textColor="@android:color/white" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/album_set_pics_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/album_cover_info_margin" android:drawableLeft="@drawable/photo" android:drawablePadding="10dp"/>
        </LinearLayout>
        <ImageView android:layout_gravity="right" android:id="@+id/enter_slot_page_icon" android:background="@drawable/image_button_click_selector" android:paddingLeft="20dp" android:paddingTop="10dp" android:paddingRight="20dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/right_arrow" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
