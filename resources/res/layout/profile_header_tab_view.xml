<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="64dp">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/tab_story_layout" android:background="@drawable/ripple_common_oval_bg" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
        <TextView android:textSize="@dimen/text_size_profile_header_tab" android:textColor="#666666" android:ellipsize="end" android:id="@+id/tab_story_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/profile_story" android:lines="1"/>
        <TextView android:textSize="13dp" android:textColor="#666666" android:id="@+id/tab_story_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3.5dp" android:text=""/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/tab_like_layouts" android:background="@drawable/ripple_common_oval_bg" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
        <TextView android:textSize="@dimen/text_size_profile_header_tab" android:textColor="#666666" android:ellipsize="end" android:id="@+id/tab_like_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/msg_like" android:lines="1"/>
        <TextView android:textSize="13dp" android:textColor="#666666" android:id="@+id/tab_like_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3.5dp" android:text=""/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/tab_flower_layout" android:background="@drawable/ripple_common_oval_bg" android:visibility="gone" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
        <TextView android:textSize="@dimen/text_size_profile_header_tab" android:textColor="@color/tab_normal_color" android:ellipsize="end" android:id="@+id/tab_flower_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/flower" android:lines="1"/>
        <TextView android:textSize="13dp" android:textColor="@color/tab_normal_color" android:id="@+id/tab_flower_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3.5dp" android:text=""/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/tab_attention_layout" android:background="@drawable/ripple_common_oval_bg" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
        <TextView android:textSize="@dimen/text_size_profile_header_tab" android:textColor="@color/tab_normal_color" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/un_attention" android:lines="1"/>
        <TextView android:textSize="13dp" android:textColor="@color/tab_normal_color" android:id="@+id/tab_attention_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3.5dp" android:text=""/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/tab_fans_layout" android:background="@drawable/ripple_common_oval_bg" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
        <TextView android:textSize="@dimen/text_size_profile_header_tab" android:textColor="@color/tab_normal_color" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fans" android:lines="1"/>
        <TextView android:textSize="13dp" android:textColor="@color/tab_normal_color" android:id="@+id/tab_fans_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3.5dp" android:text=""/>
    </LinearLayout>
</LinearLayout>
