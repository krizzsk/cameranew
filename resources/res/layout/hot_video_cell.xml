    </LinearLayout>
    <ImageView android:id="@+id/iv_like_anim_hot_video_cell" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/like_anim" android:layout_centerInParent="true"/>
</RelativeLayout>
