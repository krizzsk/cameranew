<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/video_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
    <us.pinguo.inspire.widget.videocell.InspireVideoView android:id="@+id/ivv_hot_video_cell" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <FrameLayout android:id="@+id/fl_alpha_hot_video_cell" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignTop="@+id/ivv_hot_video_cell" android:layout_alignBottom="@+id/ivv_hot_video_cell"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_header_hot_video_cell" android:paddingTop="80dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <us.pinguo.widet.PortraitImageView android:id="@+id/piv_portrait_hot_video_cell" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginLeft="8dp" android:layout_marginRight="16dp" android:src="@drawable/default_avatar" app:civ_border_width="0dp"/>
