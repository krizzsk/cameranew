<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@android:color/transparent" android:layout_width="320dp" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@color/primary_white_color" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:layout_alignParentTop="true">
        <RelativeLayout android:background="@color/primary_pop_yellow" android:layout_width="match_parent" android:layout_height="120dp">
            <us.pinguo.common.imageloader.widget.ImageLoaderView android:id="@+id/purchase_banner_image" android:layout_width="280dp" android:layout_height="120dp" android:scaleType="centerCrop"/>
        </RelativeLayout>
        <TextView android:textSize="16dp" android:textColor="@color/primary_black_87" android:id="@+id/purchase_product_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="10dp"/>
        <TextView android:textSize="16dp" android:textColor="@color/primary_black_54" android:id="@+id/purchase_product_description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="10dp"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textColorLink="@color/primary_black_24" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/store_feedback_tips"/>
            <TextView android:textColorLink="@color/primary_black_24" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/store_feedback_email"/>
        </LinearLayout>
        <TextView android:textSize="16dp" android:textColor="@color/primary_white_color" android:gravity="center" android:layout_gravity="center" android:id="@+id/sticker_purchase" android:background="@color/primary_text_blue" android:layout_width="match_parent" android:layout_height="39dp" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:layout_marginBottom="20dp"/>
    </LinearLayout>
    <ImageView android:id="@+id/sticker_purchase_cancel" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/purchase_sticker_cancel" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
</RelativeLayout>
