        <View android:layout_gravity="center_vertical" android:background="#4b979797" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_share_list" android:layout_width="match_parent" android:layout_height="match_parent"/>
</merge>
