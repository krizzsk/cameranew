<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="13dp" android:textColor="#ff666666" android:gravity="center_vertical" android:background="#fff4f4f4" android:layout_width="match_parent" android:layout_height="38dp" android:text="@string/get_current_location" android:paddingStart="16dp"/>
    <com.balysv.materialripple.MaterialRippleLayout android:layout_width="match_parent" android:layout_height="wrap_content" app:mrl_rippleColor="@color/ripple_color" app:mrl_rippleDelayClick="true" app:mrl_rippleDuration="200" app:mrl_rippleOverlay="true">
        <LinearLayout android:gravity="center_vertical" android:id="@+id/edit_area_header_location_layout" android:background="#ffffffff" android:layout_width="match_parent" android:layout_height="56dp">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/publish_location_grey" android:layout_marginStart="11dp"/>
            <TextView android:textSize="15dp" android:textColor="#ff333333" android:id="@+id/edit_area_header_location" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/requesting_locatin" android:layout_marginStart="8dp"/>
        </LinearLayout>
    </com.balysv.materialripple.MaterialRippleLayout>
    <com.balysv.materialripple.MaterialRippleLayout android:layout_width="match_parent" android:layout_height="wrap_content" app:mrl_rippleColor="@color/ripple_color" app:mrl_rippleDelayClick="true" app:mrl_rippleDuration="200" app:mrl_rippleOverlay="true">
        <LinearLayout android:orientation="horizontal" android:id="@+id/edit_area_header_no_location_tip" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="96dp">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:src="@drawable/publish_location_grey" android:layout_marginStart="11dp"/>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="16dp" android:textColor="#ff666666" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/cant_not_get_location_tip" android:layout_marginStart="8dp"/>
                <TextView android:textSize="12dp" android:textColor="#ff999999" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/location_fali_tip" android:layout_marginStart="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </com.balysv.materialripple.MaterialRippleLayout>
</LinearLayout>
